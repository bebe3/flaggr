{
  "version": 8,
  "name": "Flaggr Light",
  "sources": {
    "openfreemap": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#fafaf8"
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "openfreemap",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#f5f5f3",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "landcover-grass",
      "type": "fill",
      "source": "openfreemap",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "#e8e8e3",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "landcover-wood",
      "type": "fill",
      "source": "openfreemap",
      "source-layer": "landcover",
      "filter": ["==", "class", "wood"],
      "paint": {
        "fill-color": "#e0e0da",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openfreemap",
      "source-layer": "water",
      "paint": {
        "fill-color": "#cad2d3"
      }
    },
    {
      "id": "boundary-country",
      "type": "line",
      "source": "openfreemap",
      "source-layer": "boundary",
      "filter": [
        "all",
        ["==", "admin_level", 2],
        ["!=", "maritime", "yes"],
        ["!=", "maritime", 1],
        ["!=", "boundary", "maritime"]
      ],
      "paint": {
        "line-color": "#d0d0d0",
        "line-width": 0.5,
        "line-opacity": 0.6
      }
    }
  ]
}
